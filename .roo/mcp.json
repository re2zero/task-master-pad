{
  "mcpServers": {
    "taskmaster-ai": {
      "command": "node",
      "args": [
        "./mcp-server/server.js"
      ],
      "env": {
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium"
      },
      "alwaysAllow": [
        "get_tasks",
        "set_task_status",
        "parse_prd",
        "update",
        "update_task",
        "update_subtask",
        "generate",
        "get_task",
        "next_task",
        "expand_task",
        "add_task",
        "add_subtask",
        "remove_subtask",
        "analyze_project_complexity",
        "clear_subtasks",
        "expand_all",
        "remove_dependency",
        "validate_dependencies",
        "fix_dependencies",
        "complexity_report",
        "add_dependency",
        "remove_task",
        "initialize_project"
      ],
      "disabled": true
    }
  }
}